{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "components/*": [
        "./components/*"
      ],
      "theme/*": [
        "./theme/*"
      ],
      "hooks/*": [
        "./hooks/*"
      ],
      "assets/*": [
        "./assets/*"
      ],
      "constants/*": [
        "./constants/*"
      ],
      "utils/*": [
        "./utils/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
